{
  "manifest_version": 2,

  "name": "ReConnect2",
  "description": "This extension fixes links broken in Outlook over EA VPN",
  "version": "1.2.0",

  "icons": { "16": "icon.png",
             "48": "icon48.png",
            "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Paste link to fix"
  },
  "permissions": [
    "tabs"
  ]
}
